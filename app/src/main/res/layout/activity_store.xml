<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/Mainlinelayout"
        android:orientation="horizontal"
        android:background="#ffffffff"
        android:layout_weight="1578"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_gravity="left"
            android:id="@+id/linelayout1"
            android:orientation="vertical"
            android:layout_weight="6"
            android:layout_height="match_parent"
            android:layout_width="wrap_content">
            <ImageButton
                android:id="@+id/left_next_icon"
                android:scaleType="center"
                android:src="@drawable/left_next_icon"
                android:background="#00000000"
                android:layout_weight="10"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linelayout2"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="20"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/up_cloth"
                android:maxHeight="1000dip"
                android:maxWidth="1000dip"
                android:scaleType="fitCenter"
                android:layout_weight="10"
                android:src="@drawable/shirt_001"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/down_cloth"
                android:maxHeight="1000dip"
                android:maxWidth="1000dip"
                android:scaleType="fitCenter"
                android:layout_weight="10"
                android:src="@drawable/shirt_001"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linelayout3"
            android:layout_gravity="right"
            android:orientation="vertical"
            android:layout_weight="6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/right_next_icon"
                android:scaleType="center"
                android:src="@drawable/right_next_icon"
                android:background="#00000000"
                android:layout_weight="10"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>